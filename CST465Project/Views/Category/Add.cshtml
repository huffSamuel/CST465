@model CategoryModel
@{
    ViewBag.Title = "New Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(User.Identity.IsAuthenticated)
{
    <h1>Add Category</h1>
   using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <button type="submit">Submit</button>
    }
}
else
{
    <div>
        Please log in to perform this action.
    </div>
}

